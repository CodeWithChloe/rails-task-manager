<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li class="d-flex align-items-center">

    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="task_<%= task.id %>" <%= "checked" if task.completed? %>>
    </div>

    <%= link_to  task.title, task_path(task)%>

    <%=link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path, class: "btn btn-primary mt-3" %>
